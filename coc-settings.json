{
    "codeLens.enable": true,
    "solargraph.useBundler": true,
    "solargraph.formatting": true,
    "solargraph.checkGemVersion": false,
    "solargraph.diagnostics": true,
    "solargraph.hover": true,
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                ".stack.yaml",
                ".hie-bios",
                "BUILD.bazel",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ]
        }
    }
}
